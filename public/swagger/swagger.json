{
    "openapi": "3.0.0",
    "info": {
        "title": "Dream Cars API",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8080/Formation/DreamsCarsProject/BackEnd/public/api/",
            "description": "API Dream Cars"
        }
    ],
    "paths": {
        "/groupe": {
            "get": {
                "tags": [
                    "Groupes"
                ],
                "summary": "Array of Groupes",
                "operationId": "App\\Controller\\GroupeController::getGroupeAllAction",
                "responses": {
                    "404": {
                        "description": "Groupes no found in data-base"
                    },
                    "200": {
                        "description": "Return an array groupe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GroupeDetailsDTO"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/groupe/addGroupe": {
            "post": {
                "tags": [
                    "Groupes"
                ],
                "summary": "Adds new groupe",
                "operationId": "App\\Controller\\GroupeController::addGroupeAction",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "groupe": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Form is invalid"
                    },
                    "500": {
                        "description": "Unexpeced Error"
                    },
                    "200": {
                        "description": "Return an array groupe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GroupeDetailsDTO"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/groupe/updateGroupe/{idGroupe}": {
            "put": {
                "tags": [
                    "Groupes"
                ],
                "summary": "Update groupe",
                "operationId": "updateGroupe",
                "parameters": [
                    {
                        "parameter": "idGroupe",
                        "name": "idGroupe",
                        "in": "path",
                        "description": "Id of groupe to be update",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Form is invalid"
                    },
                    "404": {
                        "description": "Groupe Not found"
                    },
                    "500": {
                        "description": "Unexpected Error"
                    },
                    "200": {
                        "description": "Groupe is updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GroupeDetailsDTO"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "GroupeDetailsDTO": {
                "title": "Groupe model",
                "description": "Groupe model",
                "properties": {
                    "id_groupe": {
                        "description": "Unique identification",
                        "type": "integer"
                    },
                    "groupe": {
                        "description": "Groupe name",
                        "type": "string"
                    },
                    "create_at": {
                        "description": "Creation Date for a new Groupe",
                        "type": "string",
                        "format": "date"
                    },
                    "update_at": {
                        "description": "Update Date for a modification of an existing groupe",
                        "type": "string",
                        "format": "date"
                    },
                    "delete_at": {
                        "description": "Delete date for removing groupe",
                        "type": "string",
                        "format": "date"
                    }
                },
                "type": "object"
            },
            "GroupeForm": {
                "title": "Groupe Form Model",
                "description": "Groupe Form Model",
                "properties": {
                    "groupe": {
                        "title": "string",
                        "description": "Groupe to update",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}